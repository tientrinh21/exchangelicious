            "schema": {
              "type": "string",
              "maxLength": 36
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/University"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/University"
                }
              }
            }
          },
          "404": {
            "description": {
              "message": "The requested URL was not found on the server. If you entered the URL manually please check your spelling and try again."
            }
          }
        }
      }
    }
  },
